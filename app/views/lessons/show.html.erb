<div class="container">
    <div class="row">
       <h1 class="col-md-6"><%= @lesson.category.title %></h1>
       <h2 class="col-md-6 text-right text-muted">Result: <span class="text-warning"><%= @lesson.result %></span> of <%= @lesson.words.count %><h2>
    </div>
    <table class="table table-striped table-dark">
        <tbody>
            <tr>
                <th>Word</th>
                <th>Your Answer</th>
                <th>Correct Answer</th>
            </tr>
            <% @lesson.answers.each do |a|%>
                <tr>
                    <td><%= a.word.content %></td>
                    <td><%= a.choice.content %></td>
                    <td><%= a.choice.word.choices.find_by(correct_answer: true).content %></td>
                    <td><% if a.choice.content == a.choice.word.choices.find_by(correct_answer: true).content %>
                            <i class="far fa-circle"></i>
                        <% else %>
                            <i class="fas fa-times"></i>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>