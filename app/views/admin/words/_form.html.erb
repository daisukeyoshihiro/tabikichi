<div class="card container">
    <div class="card-header row">
        <div class="col-6">
            Admin | New Category | Words
        </div>
        <div class="col-6 text-right">
            <%= link_to 'back', admin_category_words_path, class: 'btn btn-outline-dark text-right' %>
        </div>
    </div>
    <div class="card-body">
        <%= form_with model: [:admin,:category, @word],local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
            <div class="form-group col-5 mx-auto">
                <%= f.label :word %>
                <%= f.text_field :content %>
            </div>
            <div class="choice-form col-5 mx-auto">
                <%= f.fields_for :choices do |c| %>
                    <div class="form-group">
                        <%= c.label :choice %>
                        <%= c.text_field :content %>
                        <%= c.label :correct_answer %>
                        <%= c.check_box :correct_answer %>
                    </div>
                <% end %>
            </div>
        <div class="text-center">
        <%= f.submit btn_msg, class: 'btn btn-primary col-5'%>
        </div>
        <% end %>
    </div>
</div>